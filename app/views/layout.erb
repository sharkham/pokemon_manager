  <body>
    <div class="wrapper">

        <%= yield %>

    <div class="sidebar">
      <h3>Links</h3>
      <ul>
        <% if @user %>
        <li><a href="/pokemon"><b>View all Pokémon</b></a></li>
        <li><a href="/user/<%= @user.username %>"><b>View your Pokémon</b></a></li>
        <li><a href="/pokemon/new"><b>Add new Pokémon</b></a></li>
        <li><a href="/"><b>Return home</b></a></li>
        <li><a href="/logout"><b>Log Out</b></a></li>
        <% else %>
        <li><a href="/login"><b>Log In</b></a></li>
        <li><a href="/signup"><b>Sign Up</b></a></li>
        <% end %>
      </ul>
    </div>
      <footer class="branding">
        <small>&copy; 2019 <strong>PokemonManager</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
